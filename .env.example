# Multi-Agent Loan Processing System Configuration
# Copy this file to .env and update with your settings

# =============================================================================
# Agent Provider Configuration
# =============================================================================

# Provider type: "openai" or "azure_openai"
LOAN_PROCESSING_AGENT_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Azure OpenAI Configuration (if using Azure)
# AZURE_OPENAI_KEY=your_azure_openai_key_here
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_VERSION=2024-02-01
# AZURE_OPENAI_DEPLOYMENT=your-deployment-name

# Default model to use
LOAN_PROCESSING_DEFAULT_MODEL=gpt-4

# =============================================================================
# Application Settings
# =============================================================================

# Environment: development, staging, production
LOAN_PROCESSING_ENVIRONMENT=development

# Debug mode
LOAN_PROCESSING_DEBUG=false

# Results directory
LOAN_PROCESSING_RESULTS_DIRECTORY=results

# Log level: DEBUG, INFO, WARNING, ERROR
LOAN_PROCESSING_LOG_LEVEL=INFO

# Default orchestration pattern
LOAN_PROCESSING_DEFAULT_PATTERN=sequential

# Pattern execution timeout (seconds)
LOAN_PROCESSING_PATTERN_TIMEOUT_SECONDS=300.0

# =============================================================================
# MCP Server Configuration
# =============================================================================

# MCP servers host
LOAN_PROCESSING_MCP_HOST=localhost

# Base port for MCP servers (will use base_port, base_port+1, base_port+2)
LOAN_PROCESSING_MCP_BASE_PORT=8010

# =============================================================================
# Pattern Configuration Source
# =============================================================================

# Pattern source: "local_files", "agent_service", "api"
# - local_files: Load patterns from local YAML files (default for development)
# - agent_service: Load patterns from agent service API (future)
# - api: Load patterns from external API (future)
LOAN_PROCESSING_PATTERNS_SOURCE=local_files

# Optional: Custom patterns directory (if using local_files)
# LOAN_PROCESSING_PATTERNS_DIR=loan_processing/agents/shared/config

# =============================================================================
# Feature Flags
# =============================================================================

# Enable/disable specific features
LOAN_PROCESSING_FEATURE_CUSTOM_APPLICATION_CREATION=false
LOAN_PROCESSING_FEATURE_PATTERN_COMPARISON=true
LOAN_PROCESSING_FEATURE_ADVANCED_REPORTING=false
LOAN_PROCESSING_FEATURE_API_MODE=false

# =============================================================================
# Monitoring and Observability
# =============================================================================

# Enable file logging
LOAN_PROCESSING_LOGGING_FILE_ENABLED=false

# Log file path
LOAN_PROCESSING_LOGGING_FILE_PATH=logs/application.log

# Health check endpoint (future use)
# LOAN_PROCESSING_HEALTH_CHECK_ENABLED=true
# LOAN_PROCESSING_HEALTH_CHECK_PORT=8080