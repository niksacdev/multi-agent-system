# Multi-Agent Loan Processing System - Environment Configuration
# Copy this file to .env and customize the values for your environment

# ===============================================================================
# CORE AI CONFIGURATION
# ===============================================================================
# OpenAI Configuration (Primary)
OPENAI_API_KEY=your_openai_api_key_here

# Azure OpenAI Configuration (Alternative)
# AZURE_OPENAI_API_KEY=your_azure_openai_api_key
# AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
# AZURE_OPENAI_API_VERSION=2024-02-01

# Anthropic Configuration (Alternative)
# ANTHROPIC_API_KEY=your_anthropic_api_key

# ===============================================================================
# LOAN PROCESSING CONFIGURATION
# ===============================================================================

# Agent Provider (openai_agents_sdk, autogen, semantic_kernel)
LOAN_PROCESSING_AGENT_PROVIDER=openai_agents_sdk

# AI Model Provider (openai, azure_openai, anthropic)
LOAN_PROCESSING_AI_MODEL_PROVIDER=openai

# Default AI Model
LOAN_PROCESSING_DEFAULT_MODEL=gpt-4

# ===============================================================================
# MCP SERVERS CONFIGURATION
# ===============================================================================

# MCP Server Ports
MCP_APP_VERIFICATION_PORT=8010
MCP_DOCUMENT_PROCESSING_PORT=8011
MCP_FINANCIAL_CALCULATIONS_PORT=8012

# MCP Connection Settings
MCP_CONNECTION_TIMEOUT=30

# ===============================================================================
# CONSOLE APPLICATION CONFIGURATION
# ===============================================================================

# UI Display Settings
DEBUG=false
SHOW_DETAILED_OUTPUT=true
AUTO_SAVE_RESULTS=true
RESULTS_DIR=results

# Console App Behavior
DEFAULT_PATTERN=sequential
ENABLE_PATTERN_COMPARISON=true

# Display Preferences
SHOW_BANNER=true
SHOW_PREREQUISITES=true

# ===============================================================================
# OBSERVABILITY & LOGGING
# ===============================================================================

# Log Configuration
LOG_LEVEL=INFO
LOG_FORMAT=console

# Azure Application Insights (Optional)
# AZURE_MONITOR_CONNECTION_STRING=InstrumentationKey=your-key;IngestionEndpoint=https://your-region.in.applicationinsights.azure.com/;LiveEndpoint=https://your-region.livediagnostics.monitor.azure.com/

# ===============================================================================
# DEVELOPMENT & DEBUGGING
# ===============================================================================

# Development Mode
DEBUG=false

# Environment Type (development, staging, production)
ENVIRONMENT=development